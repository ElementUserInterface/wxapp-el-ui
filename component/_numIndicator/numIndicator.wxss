.__numIndicator__ {
  display: inline-flex;
}

.__numIndicator-disabled__ {
  opacity: .5;
}

.__numIndicator__ > .__numIndicator-view__ {
  width: 100%;
  display: inline-flex;
  justify-content: center;
  align-items: center;
}

.__numIndicator-left-minus__ {
  position: relative;
  width: 25rpx;
  height: 25rpx;
}

.__numIndicator-left-minus__::after {
  content: '';
  position: absolute;
  top: calc(50% - 2rpx);
  left: 0;
  width: 100%;
  height: 4rpx;
  background-color: #e3e3e3;
  border-radius: 0.3rem;
}

.__numIndicator-left-add__ {
  position: relative;
  width: 25rpx;
  height: 25rpx;
}

.__numIndicator-left-add__::after {
  content: '';
  position: absolute;
  top: calc(50% - 2rpx);
  left: 0;
  width: 100%;
  height: 4rpx;
  background-color: #e3e3e3;
  border-radius: 0.3rem;
}

.__numIndicator-left-add__::before {
  content: '';
  position: absolute;
  top: 0;
  left: calc(50% - 2rpx);
  width: 4rpx;
  height: 100%;
  background-color: #e3e3e3;
  border-radius: 0.3rem;
}

.__numIndicator_value__ {
  padding: 5px 10px;
  background-color: #f2f2f2;
  border-radius: 0.3rem;
  position: relative;
}

.__numIndicator_value__ .__numIndicator_value-input__ {
  text-align: center;
  width: 80rpx;
  min-width: 80rpx;
  max-width: 150rpx;
  position: relative;
  z-index: 0;
}

.__numIndicator_btn__ {
  position: relative;
  color: inherit;
  font-size: 45rpx;
  font-weight: 500;
  padding: 0 10px;
}

.__numIndicator_btn__.__numIndicator-left-disabled__ {
  opacity: 0.4;
}

.__numIndicator_btn__::after {
  position: absolute;
  content: '';
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
