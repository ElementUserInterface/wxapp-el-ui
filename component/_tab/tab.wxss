.__tab-main__ {
  display: inline-flex;
  width: 100%;
  background: #fff;
}

.__tab-nav__ {
  position: relative;
  z-index: 10;
  display: inline-flex;
  padding: 0 40rpx;
  width: calc(100% - 80rpx);
}

.__tab-nav-title__ {
  position: relative;
  z-index: 10;
  display: inline-flex;
}

.__tab-nav-item__ {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  position: relative;
  font-size: 30rpx;
  white-space: nowrap;
  width: 100%;
  text-align: center;
  color: #aaa;
  border-bottom: 4rpx solid rgba(0, 0, 0, 0);
}

.__tab-nav-item__::after {
  content: '';
  position: absolute;
  z-index: 5;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.__tab-nav-item__ > view {
  display: inline-flex;
  align-items: center;
  height: calc(100% - 44rpx);
  padding: 20rpx;
  border-bottom: 4rpx solid rgba(0, 0, 0, 0);
}

.__tab-nav-itemactive__ {
  color: #18b6c1;
  border-bottom: 4rpx solid #18b6c1 !important;
}

.__tab-nav-itemdisabled__ {
  opacity: 0.3;
}

.__tab-nav-item-left__ {
  white-space: nowrap;
  display: inline-flex;
  align-items: center;
}
