.__popup__ {
  position: fixed;
  z-index: 10;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.__popup__modal {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
}

.__popup__content__ {
  display: inline-flex;
  justify-content: center;
  align-items: center;
}

.__popup__content__top {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}

.__popup__content__right {
  position: absolute;
  top: 0;
  right: 0;
  height: 100%;
  /* width: 100%; */
  justify-content: flex-end;
  align-items: center;
}

.__popup__content__button {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
}

.__popup__content__left {
  position: absolute;
  top: 0;
  left: 0;
  /* width: 100%; */
  height: 100%;
  justify-content: flex-start;
  align-items: center;
}
