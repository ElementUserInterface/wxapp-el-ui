@import './style/button.wxss';

.__button__ {
  text-align: center;
  font-weight: 500;
  line-height: 28px;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  animation: all 25s;
}

.__button-active__ {
  position: relative;
  content: '';
  background: #10a9b4;
  color: #fff;
}

.__button_left__ {
  justify-content: flex-start;
}

.__button_center__ {
  justify-content: center;
}

.__button_right__ {
  justify-content: flex-end;
}

.__button_mini__, .__button_3__ {
  padding: 5rpx 20rpx !important;
  font-size: 36rpx !important;
}

.__button_normal__, .__button_5__ {
  padding: 15rpx 20rpx !important;
  font-size: 34rpx !important;
}

.__button_large__, .__button_7__ {
  padding: 30rpx 20rpx !important;
  font-size: 36rpx !important;
}

.__button_radius__ {
  border-radius: 50px !important;
}
