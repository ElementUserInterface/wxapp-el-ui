.__loading__ {
  position: relative;
}

.__loading-mask__ {
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.__loading-z-index__ {
  position: absolute;
  z-index: 2;
}

.__loading-z-show__ {
  opacity: 1;
}

.__loading-z-hide__ {
  opacity: 0;
  animation: show 0.25s alternate forwards;
  transition: all 0.25s;
}

@keyframes show {
  0% {
    opacity: 1;
  }

  100% {
    opacity: 0;
    z-index: -1;
  }
}
