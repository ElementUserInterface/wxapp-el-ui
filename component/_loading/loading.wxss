.__loading__ {
  position: relative;
  width: 100%;
  height: 100%;
}

.__loading-slot__ {
  width: 100%;
  height: 100%;
}

.__loading-mask__ {
  position: absolute;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.__loading-z-index__ {
  position: relative;
  z-index: 2;
  top: 0;
  left: 0;
}

.__loading-z-show__ {
  opacity: 1;
}

.__loading-z-hide__ {
  opacity: 0;
  animation: show ease-in 0.5s;
  animation-fill-mode: forwards;
}

@keyframes show {
  0% {
    opacity: 1;
  }
  100% {
    opacity: 0;
    z-index: 0;
  }
}