.__scrolltxt__ {
  overflow: hidden;
  -webkit-overflow-scrolling: touch;
  position: relative;
}

.__scrolltxt-cont__ {
  overflow: hidden;
  width: calc(100% - 30rpx)
}

.__scrolltxt-isscroll__ {
  position: absolute;
  bottom:  0;
  right: 0;
}

.__scrolltxt-box__ {
  display: inline-block;
}

.marqueeBox-nowrap {
  white-space: nowrap;
}

.marquee_text {
  float: left;
}